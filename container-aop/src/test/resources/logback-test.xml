<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.my.container.*" level="DEBUG" />

    <root level="ERROR">
        <appender ref="STDOUT"/>
    </root>
</configuration>
